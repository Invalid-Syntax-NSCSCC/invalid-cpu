#!/usr/bin/env bash

ARGS='-O=release --dedup --disable-annotation-unknown'

# Workaround
for arg do
  shift
  case $arg in
    (-disable-infer-rw) : ;;
        (*) set -- "$@" "$arg" ;;
  esac
done

if [[ "$OSTYPE" == "darwin"* ]]; then
    firtool_darwin -O=debug --dedup --disable-annotation-unknown "$@"
else
    firtool_ubuntu2004 -O=debug --dedup --disable-annotation-unknown "$@"
fi
