#!/usr/bin/env bash

ARGS='--add-vivado-ram-address-conflict-synthesis-bug-workaround --dedup --disable-annotation-unknown'

# Workaround
for arg do
  shift
  case $arg in
    (-disable-infer-rw) : ;;
        (*) set -- "$@" "$arg" ;;
  esac
done

if [[ "$OSTYPE" == "darwin"* ]]; then
    firtool_darwin --disable-annotation-unknown --preserve-values=named "$@"
else
    firtool_ubuntu2004 --disable-annotation-unknown --preserve-values=named "$@"
fi
