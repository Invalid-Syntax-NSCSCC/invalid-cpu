#!/usr/bin/env bash

ARGS='-O=release --dedup --disable-annotation-unknown --disable-all-randomization'

# Workaround
for arg do
  shift
  case $arg in
    (-disable-infer-rw) : ;;
        (*) set -- "$@" "$arg" ;;
  esac
done

if [[ "$OSTYPE" == "darwin"* ]]; then
    firtool_darwin -O=release --dedup --disable-annotation-unknown --disable-all-randomization "$@"
else
    firtool_ubuntu2004 -O=release --dedup --disable-annotation-unknown --disable-all-randomization "$@"
fi
